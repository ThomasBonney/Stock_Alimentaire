@model StockAlimentaire.Models.Stock

@{
    ViewData["Title"] = "Create";
}

<h2>Stock - Création</h2>
<hr />

<div class="container">
    <div class="row text-center">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="stock_nom" class="sr-only"></"></label>
                <input asp-for="stock_nom" class="form-control" placeholder="Nom" />
                <span asp-validation-for="stock_nom" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Créer" class="btn btn-lg btn-primary btn-block" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Retour à la liste</a>
</div>

