@model StockAlimentaire.Models.Stock

@{
    ViewData["Title"] = "Edit";
}

<partial name="_NavBar" />

<h2>Stock - Modification</h2>
<hr />
<div class="container">
    <div class="row text-center">
        <form asp-action="Edit" asp-route-id="@Model.stock_id">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="stock_id" />


            <dl class="dl-horizontal">
                <dd>
                    <input type="hidden" asp-for="utilisateur_id" class="form-control" />
                </dd>
                <dt>
                    <label asp-for="stock_nom" class="edit-label">Nom du stock</label>
                </dt>
                <dd>
                    <input asp-for="stock_nom" class="form-control" />
                    <span asp-validation-for="stock_nom" class="text-danger"></span>
                </dd>
            </dl>
            <div class="form-group">
                <input type="submit" value="Modifier" class="btn btn-lg btn-primary btn-block" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Retour à la liste</a>
</div>

