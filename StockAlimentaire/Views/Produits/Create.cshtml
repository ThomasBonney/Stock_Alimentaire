@model StockAlimentaire.Models.Produit

@{
    ViewData["Title"] = "Create";
}

<partial name="_NavBar" />

<h2>Produit - Création</h2>
<hr />
<div class="container">
    <div class="row text-center">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="nomProd" class="sr-only"></label>
                <input asp-for="nomProd" class="form-control" placeholder="Nom" />
                <span asp-validation-for="nomProd" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Créer" class="btn btn-lg btn-primary btn-block" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Retour à la liste des produits</a>
</div>

