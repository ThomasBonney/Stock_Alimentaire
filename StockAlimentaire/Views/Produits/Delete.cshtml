@model StockAlimentaire.Models.Produit

@{
    ViewData["Title"] = "Delete";
}

<h2>Produit - Suppression</h2>

<h3>Etes-vous sûrs de vouloir supprimer ce produit ?</h3>
<div>
    <h4>Produit</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt class="edit-label">
            Nom
        </dt>
        <dd>
            @Html.DisplayFor(model => model.nomProd)
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="idProd" />
        <input type="submit" value="Supprimer" class="btn btn-danger" asp-route-id="@Model.idProd"/> |
        <a asp-action="Index">Retour à la liste des produits</a>
    </form>
</div>
