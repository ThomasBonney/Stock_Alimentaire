@model StockAlimentaire.Models.StockProduit

@{
    ViewData["Title"] = "Create";
}

<partial name="_NavBar" />

<h2>Stock produit - Création</h2>
<hr />
<div class="container">
    <div class="row text-center">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="produit_id" class="sr-only"></label>
                <input asp-for="produit_id" class="form-control" placeholder="Id produit"/>
                <span asp-validation-for="produit_id" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="stock_id" class="sr-only"></label>
                <input asp-for="stock_id" class="form-control" placeholder="Id stock"/>
                <span asp-validation-for="stock_id" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="stockProduit_qteStock" class="sr-only"></label>
                <input asp-for="stockProduit_qteStock" class="form-control" placeholder="Quantité produit"/>
                <span asp-validation-for="stockProduit_qteStock" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Créer" class="btn btn-lg btn-primary btn-block" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Retour à la liste</a>
</div>